
@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Đăng nhập</h2>

@if (TempData["UploadRedirectMessage"] != null)
{
    <p class="alert alert-warning text-center">@TempData["UploadRedirectMessage"]</p>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("username", "Tên đăng nhập", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("username", "", new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessage("UsernameInvalid", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("password", "Mật khẩu", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("password", "", new { htmlAttributes = new { @class = "form-control password", type = "password" } })
                @Html.ValidationMessage("PasswordInvalid", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Đăng nhập" class="btn btn-success" />
            </div>
        </div>
    </div>
}